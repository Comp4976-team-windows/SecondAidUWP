    </Grid>
    -->

    <Grid>
        <Grid.Background>
            <!--<ImageBrush ImageSource ="/Assets/mik.jpg" Stretch="None"></ImageBrush>-->
            <LinearGradientBrush>
                <GradientStop Color="LightBlue" Offset="0"/>
                <GradientStop Color="LightGreen" Offset="2"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Title/Logo -->
        <StackPanel Width="500" Height="300">
            <TextBlock Text="Second Aid" FontSize="100" Margin="0,130,0,0" />
        </StackPanel>

        <!-- login form -->
        <StackPanel Width="300" Grid.Row="1">
            <TextBlock x:Name="errorMessageText" TextWrapping="Wrap" Text="" Foreground="Red" />

            <TextBlock x:Name="UserNameTextBlock" Text="Username" FontSize="20" Margin="0,20,0,0" />
            <TextBox x:Name="UserNameTextBox" MinWidth="300" Width="300"/>

            <TextBlock x:Name="PasswordTextBlock" Text="Password" FontSize="20" Margin="0,20,0,0"/>
            <PasswordBox x:Name="PasswordTextBox" MinWidth="300" Width="300"/>

            <TextBlock x:Name="ClinicIdTextBlock" Text="Clinic ID" FontSize="20" Margin="0,20,0,0" />
            <TextBox x:Name="ClinicIdTextBox" MinWidth="300" Width="300" />

            <Button x:Name="LoginButton" Content="Login" Click="LoginButton_Click" Margin="0,20,0,40" FontSize="20" />
        </StackPanel>
    </Grid>
    
</Page>
